<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/topFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </FrameLayout>

    <TextView
        android:id="@+id/measurementValueCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:visibility="gone" />

    <TextView
        android:id="@+id/measurementValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
        android:visibility="gone" />

    <Button
        android:id="@+id/deleteMeasurementButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="deleteMeasurement"
        android:text="@string/delete_this_measurement"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button" />

    <Button
        android:id="@+id/newMeasurementButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_button"
        android:drawableStart="@drawable/ic_plus"
        android:fontFamily="sans-serif-light"
        android:padding="8dp"
        android:text="@string/measure_button"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:typeface="normal" />

</LinearLayout>